<header class="header">
    <nav>
        <ul class="header-menu">
            <li{% if selected_menu == "" %} class="active"{% endif %}><a href="{{ path("_home") }}">{{ "Home"|trans }}</a></li>
                    {% for category in categories %}
                <li{% if selected_menu == category.name %} class="active"{% endif %}>
                    <a href="{{ path('_category', {'category_id': category.id, 'slug': slug(category.name)}) }}">
                            {{ category.name }}</a>
                    </li>
                    {% endfor %}

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="header-menu-right">
                        <a href="{{ path('_logout') }}">
                            Logout
                            <small>({{ app.user.username }})</small>
                        </a>
                    </li>
                    {% else %}
                    <li class="{% if selected_menu == 'Connexion' %}active {% endif %}header-menu-right">
                        <a href="{{ path('_signin') }}">Connexion</a>
                    </li>
                    {% endif %}
                </ul>
            </nav>
        </header>
